@model ProjetoDespesaG1_LPOO2.Models.Despesa
@{
    ViewBag.Title = "Update";
}

<h3 style="text-align:center;">Alterar Despesa</h3>

<form action="/Despesa/Update" method="post">
    <div class="form-group">
        <input class="form-control" readonly="readonly" type="hidden" name="IdDespesa" value="@Model.IdDespesa" />
    </div>

    <div class="form-group">
        <label>Local da despesa</label>
        <input class="form-control" type="text" name="LocalDespesa" value="@Model.LocalDespesa" />
        @Html.ValidationMessageFor(model => model.LocalDespesa, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Data da despesa</label>
        <input class="form-control" type="date" name="DataDespesa" value="@string.Format("{0:yyyy-MM-dd}", Model.DataDespesa)" />
        @Html.ValidationMessageFor(model => model.DataDespesa, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Valor da despesa</label>
        <input class="form-control" type="text" name="ValorDespesa" value="@Model.ValorDespesa" />
        @Html.ValidationMessageFor(model => model.ValorDespesa, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Tipo da despesa</label>
        <select class="form-control" name="Tipo.idTipo">
            <option value="@Model.Tipo.idTipo">@Model.Tipo.nomeTipo</option>

            @foreach (ProjetoDespesaG1_LPOO2.Models.TipoDespesa item in ViewBag.Tipos)
            {
                <option value="@item.idTipo">@item.nomeTipo</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success" />
    </div>
</form>