@model IEnumerable<ProjetoBancaTCC_OO2.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <a href="~/Aluno/Create">Novo Aluno</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cidade</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Cidade</td>
                <td><a href="~/Aluno/Delete/@item.Id">Excluir</a></td>
                <td><a href="~/Aluno/Update/@item.Id">Alterar</a></td>
            </tr>
        }

    </table>
</div>